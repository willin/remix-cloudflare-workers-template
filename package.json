{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && NODE_ENV=production remix build && npm run build:worker",
    "dev": "pm2-dev ./pm2.config.js  --env development",
    "postinstall": "remix setup cloudflare-workers",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "build:css": "postcss styles/**/*.css --base styles --dir app/styles --env production",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch",
    "deploy": "npm run build && wrangler publish",
    "lint": "eslint --fix --ext .ts,.tsx --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/eslint-config": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@willin/eslint-config": "^0.1.1",
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.21",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.9.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "miniflare": "^2.3.0",
    "pm2": "^5.1.2",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.22",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
